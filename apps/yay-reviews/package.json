{
  "name": "admin-yay-reviews",
  "description": "Admin React application",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "keywords": [
    "Reviews"
  ],
  "author": "Yay Commerce",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsc --noEmit && vite build --base=/wp-content/plugins/yay-reviews/assets/admin/dist/",
